// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/// Универсальный справочник
model Dictionary {
  ///Идентификатор
  id         Int          @id @default(autoincrement())
  ///Дата создания
  createdAt  DateTime     @default(now())
  ///Дата модификации
  updatedAt  DateTime?    @updatedAt
  ///Код
  code       String?      @db.VarChar(100)
  ///Наименование
  name       String?      @db.VarChar(255)
  begDate    DateTime?    @db.Date
  endDate    DateTime?    @db.Date
  ///Код родителя
  parentId   Int?
  ///Родитель
  parent     Dictionary?  @relation("dictionaryParent", fields: [parentId], references: [id])
  categories Dictionary[] @relation("dictionaryParent")

  @@unique([parentId, code, name], name: "Dictionary_parentId_code_name_unique")
}
